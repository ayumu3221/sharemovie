<h4 class="table-active text-center px-3">
  会員一覧
</h4>
<table class="table table-hover">
  <thead>
    <tr class="table-active text">
      <th>
        <strong>ユーザーネーム</strong>
      </th>
      <th>
        <strong>メールアドレス</strong>
      </th>
      <th>
        <strong>ステータス</strong>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.status === false %>
            <strong class="text-success">有効</strong>
          <% else %>
            <strong class="text-danger">退会済み</strong>
          <% end %>
        </td>
        <td><%= link_to "詳細ページへ", admin_user_path(user), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>