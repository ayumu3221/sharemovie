<table class="table">
  <tr>
    <th>氏名</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>自己紹介</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>
　
<div class="row">
  <% if current_user != user %>
    <td><%= render "public/relationships/btn", user: user %></td>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id} mb-3" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
<% if current_user != user %>
  <%= link_to "ダイレクトメッセージ", chat_path(user.id), class: "btn btn-primary mb-3" %>
<% end %> 
</div>