<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User </h2>
      <%= render "public/users/info", user: @list.user %>
      <h2 class="mt-3">投稿</h2>
      <%= render "form", list: List.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>コメント</h2>
      <table class="table">
      <tr>
          <td><%= link_to(@list.user) do %>
            <%= @list.user.name %>
            <% end %>
          </td>
          <td><%= link_to @list.title, @list %></td>
          <td><%= @list.body %></td>
          <td id=<%= "list-" + @list.id.to_s %> >
            <%= render "public/favorites/btn", list: @list %>
          </td>
          <td class="list-comments-counter">
            <%= render "public/list_comments/counter", list: @list %>
          </td>
          <% if @list.user == current_user %>
            <td><%= link_to "編集", edit_list_path(@list), class: "btn btn-sm btn-success edit_list_#{@list.id}" %></td>
            <td><%= link_to "削除", @list, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_list_#{@list.id}" %></td>
          <% end %>
        </tr>
      </table>
      
      <div class="list-comments-index">
        <%= render "public/list_comments/index", list: @list %>
      </div>
      
      <%= render "public/list_comments/form", list: @list, list_comment: @list_comment %>
      
    </div>
  </div>
</div>