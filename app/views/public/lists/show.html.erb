<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'public/users/info', user: @list.user %>
      <h2 class="mt-3">New movie</h2>
      <%= render 'form', list: List.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Movie detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@list.user) do %>
            <%= @list.user.name %>
            <% end %>
          </td>
          <td><%= link_to @list.title, @list %></td>
          <td><%= @list.body %></td>
          <td class=<%= "favorite-" + @list.id.to_s %> >
            <%= render "public/favorites/btn", list: @list %>
          </td>
          <td class="Comments-counter">
            <%= render "public/comments/counter", list: @list %>
          </td>
          <% if @list.user == current_user %>
            <td><%= link_to 'Edit', edit_list_path(@list), class: "btn btn-sm btn-success edit_list_#{@list.id}" %></td>
            <td><%= link_to 'Destroy', @list, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_list_#{@list.id}" %></td>
          <% end %>
        </tr>
      </table>
      
      <div class="Comments-index">
        <%= render "public/comments/index", list: @list %>
      </div>
      
      <%= render "public/comments/form", list: @list, comment: @comment %>
      
    </div>
  </div>
</div>